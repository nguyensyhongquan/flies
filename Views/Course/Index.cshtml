@model FliesProject.Models.Entities.ViewModels.CourseUserViewModel

@{
    ViewData["Title"] = "Khóa học của tôi";
    Layout = "~/Views/Shared/_MentorLayout.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}
else
{
    <div class="card mb-4 p-3 border-0 shadow-sm custom-profile-card">
        <div class="d-flex align-items-center">
            <img src="@Url.Content(Model.User.AvatarUrl ?? "~/images/profile.png")"
                 alt="Avatar"
                 class="avatar-img me-3" />
            <div class="flex-grow-1">
                <h5 class="fw-bold mb-1">@Model.User.Fullname</h5>
                <small class="text-muted">@Model.User.Role</small>
            </div>
            <a href="@Url.Action("Create", "Course")" class="btn btn-primary">Tạo khóa học mới</a>
        </div>
    </div>

    <h2 class="mb-3">Khóa học của tôi</h2>
    <div class="row" id="courseList">
        @if (Model.Courses != null && Model.Courses.Any())
        {
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        @if (!string.IsNullOrEmpty(course.CoursesPicture))
                        {
                            <img src="@Url.Content(course.CoursesPicture)" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/course.jpg" class="card-img-top" alt="No image" style="height: 200px; object-fit: cover;" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">@course.Description</p>
                            <p class="card-text"><strong>Price:</strong> @String.Format("{0:C}", course.Price)</p>
                            <p class="card-text"><strong>Timelimit:</strong> @course.Timelimit hours</p>
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Details", "Course", new { id = course.CourseId })" class="btn btn-primary">View Details</a>
                                <a href="@Url.Action("Edit", "Course", new { id = course.CourseId })" class="btn btn-warning">Edit</a>
                                <a href="@Url.Action("Delete", "Course", new { id = course.CourseId })" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info" role="alert">
                Bạn chưa có khóa học nào. <a href="@Url.Action("Create", "Course")" class="alert-link">Tạo khóa học mới</a> ngay!
            </div>
        }
    </div>
}