            <div class="image-upload-container">
                <label class="image-upload-box">
                    <input type="file" name="ImageFile" accept="image/*" />
                    <span>Upload Image</span>
                </label>
            </div>

            <!-- Course form -->
            <div class="add-course-form">
                <h2>Add Course</h2>

