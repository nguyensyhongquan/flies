@model IEnumerable<FliesProject.Models.Entities.Course>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ</title>

    <!--  <link rel="stylesheet" href="~/css/styles.css"> -->
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/Course/CourseOverViewPage.css">
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <div class="header">
            <div class="header-left">
                <img src="logo.jpg" alt="Logo" class="logo">
                <div class="search-container">
                    <i class="fa fa-search search-icon"></i>
                    <input type="text" class="search-box" placeholder="Tìm kiếm khóa học bạn mong muốn...">
                </div>
            </div>
            <div class="header-right">
                <div class="auth-links" id="authLinks">
                    <a href="javascript:void(0);" id="loginLink">Đăng nhập</a>
                    <a href="javascript:void(0);" id="signupLink">Đăng ký</a>
                </div>
                <a href="#" class="google-login" id="googleLogin">
                    <i class="fab fa-google"></i> Login with Google
                </a>
                <div class="user-info" id="userInfo" style="display: none;">
                    <div class="user-avatar-container">
                        <i class="bi bi-bell notification-icon"></i>
                        <img src="logo.jpg" alt="Avatar" class="user-avatar">
                        <span id="userName" class="user-name">Tên Tài Khoản</span>
                    </div>
                    <button id="logoutButton" class="logout-button">Đăng xuất</button>
                </div>
            </div>
        </div>
        <div class="nav-bar">
            <a asp-area="" asp-controller="Account" asp-action="Home"><i class="fas fa-home"></i> Home</a>
            <div class="dropdown">
                <a asp-area="" asp-controller="Course" asp-action="CourseOverview"><i class="fas fa-book"></i> Khóa Học Dinosaur <i class="fas fa-chevron-down"></i></a>
                <div class="dropdown-content">
                    @foreach (var course in Model)
                    {
                        <a href="@Url.Action("CourseDescribe", "Course", new { id = course.CourseId })">@course.Title</a>
                    }

                </div>
            </div>
            <div class="dropdown">
                <a href="#"><i class="fas fa-pencil-alt"></i> Luyện Writing AI, Reading, Listening <i class="fas fa-chevron-down"></i></a>
                <div class="dropdown-content">
                    <a href="#">Lựa chọn 1</a>
                    <a href="#">Lựa chọn 2</a>
                    <a href="#">Lựa chọn 3</a>
				
                </div>
            </div>
            <div class="dropdown">
                <a href="#"><i class="fas fa-file-alt"></i> Bài Mẫu 8.0 + <i class="fas fa-chevron-down"></i></a>
                <div class="dropdown-content">
                    <a href="#">Lựa chọn 1</a>
                    <a href="#">Lựa chọn 2</a>
                    <a href="#">Lựa chọn 3</a>
                </div>
            </div>
            <a asp-area="" asp-controller="Account" asp-action="Dinosaur"><i class="fas fa-info-circle"></i> Dinosaur là gì ?</a>
        </div>
    </header>

    <!-- Popup for login -->
    <div class="popup" id="authPopup">
        <div class="popup-content">
            <button class="close-btn" onclick="closePopup('authPopup')">&times;</button>
            <h2 id="popupTitle">Đăng nhập</h2>
            <input type="text" id="username" placeholder="Tên đăng nhập" />
            <input type="password" id="password" placeholder="Mật khẩu" />
            <button id="submitBtn">Đăng nhập</button>
            <div style="margin-top: 10px; text-align: center;">
                <span onclick="switchPopup('authPopup', 'signupPopup')" style="cursor: pointer; color: #0066B3;">
                    Chưa có tài khoản? Quên mật khẩu
                </span>
            </div>
        </div>
    </div>

    <!-- Popup for signup -->
    <div class="popup" id="signupPopup">
        <div class="popup-content">
            <button class="close-btn" onclick="closePopup('signupPopup')">&times;</button>
            <h2>Đăng ký</h2>
            <input type="text" id="signupUsername" placeholder="Tên đăng nhập" />
            <input type="email" id="signupEmail" placeholder="Email" />
            <input type="password" id="signupPassword" placeholder="Mật khẩu" />
            <input type="password" id="confirmPassword" placeholder="Nhập lại mật khẩu" />
            <button id="signupBtn">Đăng ký</button>

            <div class="switch-text">
                <span onclick="switchPopup('signupPopup', 'authPopup')" style="cursor: pointer; color: #0066B3;">
                    Đã có tài khoản? Quên mật khẩu
                </span>
            </div>
        </div>
    </div>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="fw-bold mb-4">Là giải pháp tự học IELTS tại nhà online 100%</h1>
                    <p class="lead mb-4">
                        Ngoài nền tảng luyện tập miễn phí, Flies còn cung cấp các khóa học IELTS
                        online có trả phí.
                    </p>
                    <button class="btn btn-primary px-4 py-2">Tìm hiểu thêm về giải pháp</button>
                </div>
                <div class="col-lg-6">
                    <img src="~/images/Slogan.png" alt="YouPass Platform"
                         class="img-fluid">
                </div>
            </div>
        </div>
    </section>

    

    <!-- Course List Section -->
    <section class="course-list-section bg-white">
        <div class="container">
            <div class="course-list-heading">
                <h2 class="fw-bold text-center">Các khóa học tại Flies</h2>
            </div>

            <div class="row">
                @foreach (var course in Model)
                {
                    var badgeClass = course.Description switch
                    {
                        "Writing" => "bg-success",
                        "Reading" => "bg-primary",
                        "Listening" => "bg-warning text-dark",
                        _ => "bg-secondary"
                    };

                    <div class="col-lg-12 mb-4">
                        <div class="card youpass-card h-100">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-center mb-3">
                                    <img src="" alt="@course.Title"
                                         class="me-3" style="width: 70px; height: 70px;">
                                    <div>
                                        <h3 class="card-title mb-1">@course.Title</h3>
                                        <div class="d-flex align-items-center">
                                            <span class="badge @badgeClass me-2">@course.Description</span>
                                            <span class="guarantee-badge">Có cam kết đầu ra</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-md-6">
                                        <h5 class="fw-bold">Đầu vào: Phù hợp với bạn nếu</h5>
                                        <ul>
                                            <li>Bạn có thể xử lý số liệu ở mức cơ bản.</li>
                                            <li>
                                                Tuy nhiên, khi viết Full bài Task 1 thì gặp rất nhiều khó khăn trong việc
                                                gom dữ liệu, sắp xếp thứ tự thông tin trong bài, và rất lúng túng khi viết.
                                            </li>
                                            <li>Level IELTS Writing tương đương 5.5+</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <h5 class="fw-bold">Đầu ra: Bạn sẽ trở nên</h5>
                                        <ul>
                                            <li>Hiểu Framework để gom dữ liệu cho mỗi dạng đề Writing Task 1.</li>
                                            <li>
                                                Nắm vững cấu trúc câu, từ vựng, và kỹ thuật paraphrasing để đa dạng ngôn ngữ
                                                khi viết.
                                            </li>
                                            <li>Level 6.5/7.0++ IELTS Writing</li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="text-center mt-4">
                                    <a class="btn btn-primary px-4" href="@Url.Action("CourseDescribe", "Course", new { id = course.CourseId })">Tìm hiểu thêm về khóa học</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </section>

    <!-- Framework Section -->
    <section class="framework-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="fw-bold mb-4">Học IELTS theo phương pháp độc quyền Flies Logical Framework</h2>
                    <p class="lead mb-4">
                        Bộ chương trình được biên soạn theo phương pháp Logical Framework độc quyền,
                        thực hiện bởi team Academic 100% IELTS 8.5-9.0, hiện đang trực tiếp giảng dạy tại trung tâm
                        IELTS Flies. Chương trình đã được áp dụng thành công cho hơn 3000+ học sinh của IELTS Flies.
                    </p>
                    <a href="#" class="btn btn-light px-4">Tìm hiểu về Ielts Flies</a>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-6 col-md-4 mb-4">
                            <div class="card border-0 bg-transparent text-white text-center">
                                <div class="card-body">
                                    <img src="image/TeacherTienDung.png" style="max-width: 100px; height: 100px;"
                                         class="rounded-circle mb-3" alt="Phạm Minh Khoa">
                                    <h5 class="card-title mb-1">NGUYEN TH TIEN DUNG</h5>
                                    <p class="card-text">IELTS 9.0</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 mb-4">
                            <div class="card border-0 bg-transparent text-white text-center">
                                <div class="card-body">
                                    <img src="image/TeacherHongQuan.png" style="max-width: 100px; height: 100px;"
                                         class="rounded-circle mb-3" alt="Phan Đ. Ng. Linh">
                                    <h5 class="card-title mb-1">DOAN HONG QUAN</h5>
                                    <p class="card-text">IELTS 8.5</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 mb-4">
                            <div class="card border-0 bg-transparent text-white text-center">
                                <div class="card-body">
                                    <img src="image/TeacherBaHoang.png" style="max-width: 100px; height: 100px;"
                                         class="rounded-circle mb-3" alt="Phạm Đ. Lan Vy">
                                    <h5 class="card-title mb-1">NGUYEN BA HOANG</h5>
                                    <p class="card-text">IELTS 8.5</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Learning Features Section -->
    <section class="py-5 bg-white">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">Học sinh tại Flies</h2>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <h4 class="mb-3">1. Hệ thống câu hỏi có giải thích đáp án cực kỳ chi tiết sau mỗi video</h4>
                            <p>Giúp học viên củng cố từng điểm kiến thức đã học</p>
                            <img src="https://ext.same-assets.com/4155023720/3929187451.png" alt="Hệ thống câu hỏi"
                                 class="img-fluid rounded mt-3">
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <h4 class="mb-3">2. Củng cố kiến thức với bộ tài liệu được hệ thống hóa theo mind map</h4>
                            <p>
                                Đồng thời, học liệu cung cấp rất nhiều sample essay được viết theo Logical Framework, đã
                                được chấm bởi các giám khảo IELTS.
                            </p>
                            <img src="https://ext.same-assets.com/4155023720/3672492379.png" alt="Mind map"
                                 class="img-fluid rounded mt-3">
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <h4 class="mb-3">
                                3. Bài tập viết trong khóa học được team Academic trực tiếp chấm chữa chi
                                tiết
                            </h4>
                            <p>Trong vòng 3 ngày kể từ khi nộp bài.</p>
                            <img src="https://ext.same-assets.com/4155023720/2607152840.gif" alt="Chấm bài"
                                 class="img-fluid rounded mt-3">
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <h4 class="mb-3">4. Được giáo viên giải đáp thắc mắc 1-1 về bài học</h4>
                            <p>Trong suốt thời hạn 9 tháng diễn ra khóa học</p>
                            <img src="https://ext.same-assets.com/4155023720/1293706183.gif" alt="Giải đáp thắc mắc"
                                 class="img-fluid rounded mt-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <img src="https://ext.same-assets.com/4155023720/1656366545.svg" alt="IELTS Flies"
                         class="footer-logo">
                    <p>Nền tảng tự học Flies được xây dựng bởi Trung tâm IELTS Flies</p>
                </div>
                <div class="col-lg-4 col-md-4 mb-4 mb-md-0">
                    <h5 class="text-white mb-4">Địa chỉ</h5>
                    <p>FPT Complex Da Nang, Hoa Hai, Ngu Hanh Son distr, Da Nang city</p>
                </div>
                <div class="col-lg-4 col-md-4 mb-4 mb-md-0">
                    <h5 class="text-white mb-4">Liên hệ</h5>
                    <p>Zalo OA: <a href="https://zalo.me/youpass" class="footer-link">https://zalo.me/youpass</a></p>
                    <p>Hotline: 0355 232 833</p>
                </div>

            </div>
            <div class="copyright text-center">
                <p>© 2025 Flies, Inc. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Floating Chat Button -->
    <div class="floating-chat">
        <a href="https://zalo.me/youpass" class="chat-btn" title="Chat với YouPass">
            <i class="bi bi-chat-dots-fill"></i>
        </a>
    </div>


    <script src="~/js/user/Header.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
