@model FliesProject.Models.Entities.Course


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--   <link rel="stylesheet" href="~/css/user/Styles.css" asp-append-version="true"> -->
    <link rel="stylesheet" href="~/css/user/Header.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/Course/CourseDescribe.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        /* Background mờ khi mở popup */
        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.5);
        }

        /* Animation mở popup */
        .modal.fade .modal-dialog {
            transform: translateY(50px);
            opacity: 0;
            transition: all 0.3s ease-out;
        }

        .modal.show .modal-dialog {
            transform: translateY(0);
            opacity: 1;
        }

        /* Style popup */
        .modal-content {
            border-radius: 15px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        }

        .modal-header {
            border-bottom: none;
        }

        .modal-body {
            padding: 25px;
        }

        /* Thông tin khóa học */
        .course-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .course-img {
            width: 80px;
            height: 80px;
            border-radius: 10px;
        }

        .course-title {
            font-size: 20px;
            font-weight: bold;
        }

        .course-price {
            font-size: 24px;
            font-weight: bold;
            color: #ff6633;
        }

        /* Danh sách tính năng khóa học */
        .feature-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 15px;
            border-radius: 10px;
            border: 1px solid #ddd;
            font-size: 14px;
            background-color: #f8f9fa;
        }

            .feature-item img {
                width: 18px;
                height: 18px;
            }

        .total-price {
            font-size: 22px;
            font-weight: bold;
            color: #ff6633;
        }

        /* Style nút mua ngay */
        .buy-btn {
            background-color: #ff6633;
            color: white;
            font-size: 18px;
            border-radius: 30px;
            padding: 12px 30px;
            border: none;
            transition: 0.3s;
        }

            .buy-btn:hover {
                background-color: #e65c2a;
            }
    </style>
   

</head>
<body>
    <header>
        <div class="header">
            <div class="header-left">
                <img src="~/images/user/logo.jpg" alt="Logo" class="logo">
                <div class="search-container">
                    <i class="fa fa-search search-icon"></i>
                    <input type="text" class="search-box" placeholder="Tìm kiếm khóa học bạn mong muốn...">
                </div>
            </div>
            <div class="header-right">
                <div class="auth-links" id="authLinks">
                    <a href="javascript:void(0);" id="loginLink">Đăng nhập</a>
                    <a href="javascript:void(0);" id="signupLink">Đăng ký</a>
                </div>
                <a href="#" class="google-login" id="googleLogin">
                    <i class="fab fa-google"></i> Login with Google
                </a>
                <div class="user-info" id="userInfo" style="display: none;">
                    <div class="user-avatar-container">
                        <i class="bi bi-bell notification-icon">
                            <span id="notificationCount" class="notification-badge">3</span>
                        </i>
                        <img src="~/images/user/avatar.jpg" alt="Avatar" class="user-avatar">
                        <span id="userName" class="user-name"></span>
                    </div>
                    <div class="logout-container">
                        <button id="logoutButton" class="logout-button">Đăng xuất</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav-bar">
            <a asp-area="" asp-controller="Account" asp-action="Home"><i class="fas fa-home"></i> Home</a>
            <div class="dropdown">
                <a asp-area="" asp-controller="UsersCourse" asp-action="CourseOverview"><i class="fas fa-book"></i> Khóa Học Dinosaur <i class="fas fa-chevron-down"></i></a>
                <div class="dropdown-content">
                    <a href="#">Lựa chọn 1</a>
                    <a href="#">Lựa chọn 2</a>
                    <a href="#">Lựa chọn 3</a>

                </div>
            </div>
            <div class="dropdown">
                <a href="#"><i class="fas fa-pencil-alt"></i> Luyện Writing AI, Reading, Listening <i class="fas fa-chevron-down"></i></a>
                <div class="dropdown-content">
                    <a href="#">Lựa chọn 1</a>
                    <a href="#">Lựa chọn 2</a>
                    <a href="#">Lựa chọn 3</a>
                </div>
            </div>
            <div class="dropdown">
                <a href="#"><i class="fas fa-file-alt"></i> Bài Mẫu 8.0 + <i class="fas fa-chevron-down"></i></a>
                <div class="dropdown-content">
                    <a href="#">Lựa chọn 1</a>
                    <a href="#">Lựa chọn 2</a>
                    <a href="#">Lựa chọn 3</a>
                </div>
            </div>
            <a asp-area="" asp-controller="Account" asp-action="Dinosaur"><i class="fas fa-info-circle"></i> Dinosaur là gì ?</a>
        </div>
    </header>

    <!-- Popup for login -->
    <div class="popup" id="authPopup">
        <div class="popup-content">
            <button class="close-btn" onclick="closePopup('authPopup')">&times;</button>
            <h2 id="popupTitle">Đăng nhập</h2>
            <input type="text" id="username" placeholder="Tên đăng nhập" />
            <input type="password" id="password" placeholder="Mật khẩu" />
            <button id="submitBtn" onclick="login()">Đăng nhập</button>
            <div style="margin-top: 10px; text-align: center;">
                <span onclick="switchPopup('authPopup', 'signupPopup')" style="cursor: pointer; color: #0066B3;">
                    Chưa có tài khoản? Quên mật khẩu
                </span>
            </div>
        </div>
    </div>

    <!-- Popup for signup -->
    <div class="popup" id="signupPopup">
        <div class="popup-content">
            <button class="close-btn" onclick="closePopup('signupPopup')">&times;</button>
            <h2>Đăng ký</h2>
            @* IMPORTANT: This form needs to post to the correct controller action - Removed class="popup" from form *@
            <form asp-controller="Account" asp-action="Register" method="post" id="signupForm">
                @* Add AntiForgeryToken for security *@
                @Html.AntiForgeryToken()

                @* Use placeholder attributes like the example.
                Input names MUST match the RegisterViewModel properties (Username, Email, Password, ConfirmPassword) *@
                <input name="Username" type="text" placeholder="Tên đăng nhập" required />
                @* Add validation message placeholders if needed, or rely on summary *@

                <input name="Email" type="email" placeholder="Email" required />

                <input name="Password" type="password" placeholder="Mật khẩu" required />

                <input name="ConfirmPassword" type="password" placeholder="Nhập lại mật khẩu" required />

                <button type="submit">Đăng ký</button>

                <div class="switch-text">
                    <span onclick="switchPopup('signupPopup', 'authPopup')" style="cursor: pointer; color: #0066B3;">
                        Đã có tài khoản? Đăng nhập
                    </span>
                </div>
                @* Optional: Display validation summary inside the popup *@
                @* <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div> *@
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <main>
        <!-- Hero Section -->
        <section id="hero" class="py-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <h1 class="mb-3">@Model.Title</h1>
                        <p class="lead">Tự học @Model.Description dễ dàng với support 1-1 từ giáo viên IELTS 8.5+</p>
                        <p>
                            Thành thạo việc gom Data và luyện @Model.Description với phương pháp Logical Framework, đã giúp
                            5000+ học sinh tiến bộ một cách bền chất và đạt band mong muốn.
                        </p>
                        <p>
                            Người trực tiếp giảng dạy là thầy Đoàn Hồng Quân(IELTS 9.0 2 lần), Academic Director của
                            Flies.
                        </p>
                    </div>
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @if (ViewBag.IsEnrolled)
                                    {
                                        <a asp-controller="UsersCourse" asp-action="CourseDetail" asp-route-id="@Model.CourseId" class="btn btn-success w-100 mb-2">Vào học ngay</a>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Tổng cộng</p>
                                        <h2 class="text-danger fw-bold">@(Model.Price?.ToString("N0") ?? "0") VNĐ</h2>
                                        <a href="#" class="btn btn-outline-danger w-100 mb-2" onclick="showPurchaseConfirmation(@Model.CourseId)">Mua ngay</a>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Tổng cộng</p>
                                    <h2 class="text-danger fw-bold">@(Model.Price?.ToString("N0") ?? "0") VNĐ</h2>
                                    <a href="#" class="btn btn-outline-danger w-100 mb-2" onclick="showLoginRequired()">Mua ngay</a>
                                }
                                <button class="btn btn-outline-primary w-100">Tư vấn</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

       

        <!-- Course Tabs -->
        <section id="course-tabs" class="py-4">
            <div class="container">
                <ul class="nav nav-pills mb-4 justify-content-center" id="courseTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="curriculum-tab" data-bs-toggle="pill"
                                data-bs-target="#curriculum" type="button" role="tab">
                            Chương trình học
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="benefits-tab" data-bs-toggle="pill" data-bs-target="#benefits"
                                type="button" role="tab">
                            Quyền lợi bạn học
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="guarantee-tab" data-bs-toggle="pill" data-bs-target="#guarantee"
                                type="button" role="tab">
                            Chính sách cam kết đầu ra
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="reviews-tab" data-bs-toggle="pill" data-bs-target="#reviews"
                                type="button" role="tab">
                            Học sinh YouPass Review
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="faq-tab" data-bs-toggle="pill" data-bs-target="#faq" type="button"
                                role="tab">
                            Giải đáp thắc mắc thường gặp
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="courseTabsContent">
                    <!-- Curriculum Tab Content -->
                    <div class="tab-pane fade show active" id="curriculum" role="tabpanel"
                         aria-labelledby="curriculum-tab">
                        <h3 class="mb-4">Chương trình học</h3>
                        <p>
                            Nếu quyết tâm học nghiêm túc, Flies cam kết bạn sẽ luôn luôn biết cách viết cho mọi dạng
                            bài Writing Task 1.
                        </p>
                        <p>
                            Cụ thể, bạn sẽ thành thạo việc: (1) Gom thông tin cho Overview, (2) Sắp xếp thứ tự thông tin
                            trong phần Body, và (3) Nắm vững cấu trúc câu & kỹ năng paraphrasing để viết được tất cả các
                            dạng đề Writing Task 1.
                        </p>
                        <p>
                            YouPass được thành lập bởi trung tâm IELTS 1984, và phương pháp Logical Framework đã dạy cho
                            hơn 5.000 học sinh tại trung tâm.
                        </p>

                        <!-- Course Content Accordion -->
                        <div class="accordion mt-4" id="courseContent">
                            <!-- Intro Section -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="intro-heading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#intro-collapse">
                                        Intro - Cách học Writing Task 1 với YouPass
                                    </button>
                                </h2>
                                <div id="intro-collapse" class="accordion-collapse collapse"
                                     data-bs-parent="#courseContent">
                                    <div class="accordion-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Tại sao Writing chậm tiến bộ</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Phương pháp dạy Writing của YouPass</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Cách học cùng YouPass</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Chính sách Cam kết đầu ra</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Hướng dẫn thanh toán khóa học</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-file-alt text-info me-3"></i>
                                                <span>Tài liệu: Các kênh liên lạc hỗ trợ</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-file-alt text-info me-3"></i>
                                                <span>Tài liệu: Chính sách học bổng và hỗ trợ học viên đặc thù</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Lesson 1 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="lesson1-heading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#lesson1-collapse">
                                        Lesson 1 - Basic Data Description
                                    </button>
                                </h2>
                                <div id="lesson1-collapse" class="accordion-collapse collapse"
                                     data-bs-parent="#courseContent">
                                    <div class="accordion-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Tổng quan Writing Task 1 cùng YouPass</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Tả số liệu 'tuyệt đối' & paraphrase cấu trúc câu</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-tasks text-warning me-3"></i>
                                                <span>Bài tập: Tả số liệu 'tuyệt đối' & paraphrase cấu trúc câu</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Tả số liệu 'tương đối' & paraphrase cấu trúc câu</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-tasks text-warning me-3"></i>
                                                <span>Bài tập: Tả số liệu 'tương đối' & paraphrase cấu trúc câu</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-file-alt text-info me-3"></i>
                                                <span>Tài liệu: Tổng hợp kiến thức Lesson 1</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Lesson 2 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="lesson2-heading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#lesson2-collapse">
                                        Lesson 2 - Pie Charts
                                    </button>
                                </h2>
                                <div id="lesson2-collapse" class="accordion-collapse collapse"
                                     data-bs-parent="#courseContent">
                                    <div class="accordion-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Giới thiệu dạng Pie Charts</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Cách viết Introduction</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-tasks text-warning me-3"></i>
                                                <span>Bài tập: Cách viết Introduction Pie Charts</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-play-circle text-primary me-3"></i>
                                                <span>Video: Logic & Ngôn ngữ viết Overview</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-tasks text-warning me-3"></i>
                                                <span>Bài tập: Cách viết Overview Pie Charts</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-file-alt text-info me-3"></i>
                                                <span>Tài liệu: Tổng hợp kiến thức Lesson 2</span>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <i class="fas fa-file-alt text-info me-3"></i>
                                                <span>Tài liệu: Pie Sample Reports</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- More lessons (collapsed for brevity) -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="more-lessons-heading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#more-lessons-collapse">
                                        Xem tất cả 9 học phần
                                    </button>
                                </h2>
                                <div id="more-lessons-collapse" class="accordion-collapse collapse"
                                     data-bs-parent="#courseContent">
                                    <div class="accordion-body">
                                        <p class="text-center">
                                            <i class="fas fa-lock text-secondary me-2"></i>
                                            Đăng ký khóa học để xem toàn bộ nội dung
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Benefits Tab Content -->
                    <div class="tab-pane fade" id="benefits" role="tabpanel" aria-labelledby="benefits-tab">
                        <h3 class="mb-4">Quyền lợi bạn học</h3>
                        <p>Việc học chương trình Logical Framework của YouPass được chia thành 3 phần chính:</p>

                        <div class="row mt-5">
                            <div class="col-md-4">
                                <div class="benefit-card text-center">
                                    <i class="fas fa-video mb-3"></i>
                                    <h4>Tự học</h4>
                                    <ul class="list-unstyled text-start">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i> Học với
                                            bộ video dạy Logical Framework theo 8 Lessons (64 videos ~ 11h)
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i> Bài tập
                                            củng cố kiến thức sau mỗi video
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="benefit-card text-center">
                                    <i class="fas fa-pen-alt mb-3"></i>
                                    <h4>Viết bài để được chấm chữa</h4>
                                    <ul class="list-unstyled text-start">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i> Viết
                                            <strong>18 bài Task 1</strong> theo phương pháp <strong>
                                                Logical
                                                Framework
                                            </strong>
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <strong>Đội ngũ YouPass chấm chữa</strong> chi tiết từng bài
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="benefit-card text-center">
                                    <i class="fas fa-comments mb-3"></i>
                                    <h4>Hỏi đáp 1-1 với giáo viên</h4>
                                    <ul class="list-unstyled text-start">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i> Trao đổi
                                            trực tiếp với giáo viên YouPass (IELTS 8.5-9.0)
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i> Được giải
                                            đáp mọi thắc mắc trong quá trình học
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

