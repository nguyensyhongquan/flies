@{
	Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>About Student</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">Students</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">About Student</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
                <div class="profile-statistics">
                    <div class="text-center">
                        <div class="profile-photo">
                            <img src="images/profile/education/pic1.jpg" class="img-fluid rounded-circle" alt="">
                        </div>
                        <h3 class="mt-4 mb-1">Nguyễn Văn A</h3>
                        <p class="text-muted">Học viên</p>
                        <div class="mt-4">
                            <button class="btn btn-primary px-5 mr-3">Nhắn tin</button>
                            <button class="btn btn-dark px-3">Chỉnh sửa</button>
                        </div>
                    </div>
                    <!-- Thông tin cơ bản -->
                    <div class="mt-4">
                        <h4 class="card-title mb-4">Thông tin cơ bản</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>Mã học viên:</td>
                                        <td>STU001</td>
                                    </tr>
                                    <tr>
                                        <td>Email:</td>
                                        <td>example@gmail.com</td>
                                    </tr>
                                    <tr>
                                        <td>Số điện thoại:</td>
                                        <td>0123456789</td>
                                    </tr>
                                    <tr>
                                        <td>Ngày tham gia:</td>
                                        <td>01/01/2024</td>
                                    </tr>
                                    <tr>
                                        <td>Trạng thái:</td>
                                        <td><span class="badge badge-success">Đang học</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card">
            <div class="card-body">
                <div class="profile-tab">
                    <div class="custom-tab-1">
                        <ul class="nav nav-tabs">
                            <li class="nav-item"><a href="#enrolled-courses" data-toggle="tab" class="nav-link active show">Khóa học đã tham gia</a></li>
                            <li class="nav-item"><a href="#learning-activities" data-toggle="tab" class="nav-link">Hoạt động học tập</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="enrolled-courses" class="tab-pane fade active show">
                                <!-- Danh sách khóa học -->
                                <div class="courses-list mt-4">
                                    <!-- Khóa học 1 -->
                                    <div class="card course-item mb-3">
                                        <div class="card-body">
                                            <div class="row align-items-center">
                                                <div class="col-xl-3 col-xxl-2">
                                                    <img src="images/courses/course1.jpg" alt="" class="img-fluid rounded">
                                                </div>
                                                <div class="col-xl-9 col-xxl-10">
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <h4 class="mb-0">Tiếng Anh Cơ Bản B1</h4>
                                                        <span class="badge badge-primary">Đang học</span>
                                                    </div>
                                                    <div class="progress mb-3" style="height: 15px;">
                                                        <div class="progress-bar bg-success progress-animated" style="width: 75%; height: 15px;" role="progressbar">
                                                            <span class="sr-only">75% Complete</span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex justify-content-between">
                                                        <div>
                                                            <p class="mb-0">Tiến độ: 75%</p>
                                                            <small class="text-muted">15/20 bài học hoàn thành</small>
                                                        </div>
                                                        <div class="text-right">
                                                            <p class="mb-0">Ngày bắt đầu: 01/01/2024</p>
                                                            <small class="text-muted">Dự kiến hoàn thành: 01/03/2024</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Khóa học 2 -->
                                    <div class="card course-item mb-3">
                                        <div class="card-body">
                                            <div class="row align-items-center">
                                                <div class="col-xl-3 col-xxl-2">
                                                    <img src="images/courses/course2.jpg" alt="" class="img-fluid rounded">
                                                </div>
                                                <div class="col-xl-9 col-xxl-10">
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <h4 class="mb-0">Tiếng Anh Sơ Sinh</h4>
                                                        <span class="badge badge-success">Hoàn thành</span>
                                                    </div>
                                                    <div class="progress mb-3" style="height: 15px;">
                                                        <div class="progress-bar bg-success progress-animated" style="width: 100%; height: 15px;" role="progressbar">
                                                            <span class="sr-only">100% Complete</span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex justify-content-between">
                                                        <div>
                                                            <p class="mb-0">Tiến độ: 100%</p>
                                                            <small class="text-muted">25/25 bài học hoàn thành</small>
                                                        </div>
                                                        <div class="text-right">
                                                            <p class="mb-0">Ngày hoàn thành: 31/12/2023</p>
                                                            <small class="text-muted">Điểm số: 95/100</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="learning-activities" class="tab-pane fade">
                                <div class="timeline-active mt-4">
                                    <div class="timeline-list">
                                        <div class="timeline-item">
                                            <div class="timeline-badge success">
                                                <i class="fa fa-check"></i>
                                            </div>
                                            <div class="timeline-panel">
                                                <div class="timeline-heading">
                                                    <h5 class="timeline-title">Hoàn thành bài kiểm tra JavaScript</h5>
                                                    <small class="text-muted">2 giờ trước</small>
                                                </div>
                                                <div class="timeline-body">
                                                    <p>Đạt điểm 95/100 trong bài kiểm tra JavaScript Nâng cao</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="timeline-item">
                                            <div class="timeline-badge info">
                                                <i class="fa fa-book"></i>
                                            </div>
                                            <div class="timeline-panel">
                                                <div class="timeline-heading">
                                                    <h5 class="timeline-title">Bắt đầu khóa học mới</h5>
                                                    <small class="text-muted">1 ngày trước</small>
                                                </div>
                                                <div class="timeline-body">
                                                    <p>Đăng ký khóa học "Lập trình Web Frontend"</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>